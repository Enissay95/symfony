{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>All the series of the program table : </h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Category : {{ program.category.name }}</h2>
            <p>{{ program.synopsis }}</p>
            {# Lien vers la fiche de la s√©rie : #}
            <a href="{{ path("program_show", { id: program.id }) }}">See the notice</a>
        </div>
    {% else %}
        No series found.
    {% endfor %}

    <a href="{{ path('app_index') }}">
       </br><h3> Back to home </h3>
    </a>
{% endblock %}